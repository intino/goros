Service fmsservice as REST(host = "{api_url}", port = "{port}")
	title = "MailService API"
	basePath = "/mailservice"

	//AuthenticatedWithToken

	Resource("/sendmail") sendMail
		Post(description = "Sends a mail")
			Parameter(in=query) from as Text
			Parameter(in=query) body as Text
			Parameter(in=query) files as Text
			Response as Text
